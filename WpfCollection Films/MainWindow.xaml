                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFBF0A0A" Offset="1"/>
                </LinearGradientBrush>
            </ToolBar.Background>
        </ToolBar>
    </Grid>
</Window>
