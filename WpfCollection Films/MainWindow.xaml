            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5" Margin="0,0,11,-6"/>
            </TabItem>
        </TabControl>
        <ToolBar x:Name="toolBar" VerticalAlignment="Top" Height="51" Grid.ColumnSpan="3" Margin="0,0,10,0">
