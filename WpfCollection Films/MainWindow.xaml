                <DropShadowEffect/>
            </GridSplitter.Effect>
        </GridSplitter>
        <RichTextBox x:Name="richTextBox" Margin="0,0,0,-4" Grid.Row="3" Grid.ColumnSpan="3" Background="Black" Foreground="#FF6CFB6C">
